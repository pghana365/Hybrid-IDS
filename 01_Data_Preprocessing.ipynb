import pandas as pd
import numpy as np
from sklearn.preprocessing import MinMaxScaler
from sklearn.model_selection import train_test_split
import os

# File Setup
# Using the specific filename from my local directory
input_csv = 'training_data.csv'  
output_file = 'processed_data.npz' 

#Step 2: Load the Data
print(f"Reading file: {input_csv}...")

# Check if file exists to avoid errors later
if not os.path.exists(input_csv):
    raise FileNotFoundError(f"Error: {input_csv} is missing. Make sure it's in the folder.")

# Load the dataset (handling mixed types just in case)
df = pd.read_csv(input_csv, low_memory=False)

print(f"Data loaded successfully. Shape: {df.shape}")
print(f"Columns found: {list(df.columns)}")

# Feature Selection
# These are the columns I need for the model input
features = ['CAN_ID', 'DLC', 'Data_0', 'Data_1', 'Data_2', 'Data_3', 'Data_4', 'Data_5', 'Data_6', 'Data_7']
target = 'Label'

# Make sure all columns are actually in the file
missing = [col for col in features if col not in df.columns]
if missing:
    raise ValueError(f"Missing columns in CSV: {missing}")

# Create the Feature Matrix (X) and Target Vector (y)
X = df[features].values
y = df[target].values

print(f"X shape: {X.shape}")
print(f"y shape: {y.shape}")

#Normalization
# Scaling everything to 0-1 range so the neural network converges faster
print("Scaling features...")
scaler = MinMaxScaler()
X_scaled = scaler.fit_transform(X)

#Splitting the Data
# Using an 80/20 split. 'stratify=y' ensures we keep the same ratio of attacks in both sets.
print("Splitting into Train/Test sets...")
X_train, X_test, y_train, y_test = train_test_split(X_scaled, y, test_size=0.2, random_state=42, stratify=y)

print("Split finished.")
print(f"Train size: {X_train.shape[0]}")
print(f"Test size: {X_test.shape[0]}")

#Save Files
# Saving as .npz so I can load it quickly in the next notebook
np.savez(output_file, X_train=X_train, X_test=X_test, y_train=y_train, y_test=y_test)
print(f"Done. Processed data saved to {output_file}")